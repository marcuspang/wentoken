{
  "name": "wentoken",
  "description": "NFT Portfolio and trading platform for inter-NFT trades",
  "version": "1.0.0",
  "private": true,
  "author": "wenToken Team",
  "license": "MIT",
  "keywords": [
    "nextjs",
    "starter",
    "typescript"
  ],
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "deploy:contract": "yarn hardhat run scripts/deploy.ts --network ropsten",
    "type-check": "tsc",
    "frp": "./frp_windows/frpc.exe -c ./frp_windows/frpc.ini",
    "frp:mac": "./frp_mac/frpc -c ./frp_mac/frpc.ini",
    "lint": "eslint --ignore-path .gitignore \"**/*.+(ts|js|tsx)\" --fix",
    "lint:sol": "solhint --fix --ignore-path .gitignore \"**/*.sol\"",
    "format": "prettier --ignore-path .gitignore \"**/*.+(ts|js|tsx|json|md)\" --write",
    "dev:network": "concurrently --kill-others-on-fail \"yarn hardhat node\" \"yarn hardhat run scripts/deploy.ts --network localhost\"  \"yarn frp\"",
    "dev:network:mac": "concurrently --kill-others-on-fail \"yarn hardhat node\" \"yarn hardhat run scripts/deploy.ts --network localhost\"  \"yarn frp:mac\"",
    "postinstall": "husky install"
  },
  "lint-staged": {
    "./**/*.{ts,js,jsx,tsx}": [
      "yarn lint",
      "yarn format"
    ]
  },
  "dependencies": {
    "@chakra-ui/icons": "1.1.1",
    "@chakra-ui/react": "1.7.4",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@fontsource/poppins": "4.5.0",
    "@openzeppelin/contracts": "4.7.1",
    "@walletconnect/web3-provider": "1.7.1",
    "concurrently": "7.0.0",
    "framer-motion": "^5",
    "moralis": "1.1.0",
    "next": "12.0.8",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-icons": "4.3.1",
    "react-moralis": "1.1.0",
    "recharts": "2.1.8",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "2.0.4",
    "@nomiclabs/hardhat-etherscan": "^2.1.3",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@openzeppelin/hardhat-upgrades": "1.13.0",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.3.0",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "17.0.38",
    "@types/react-dom": "17.0.11",
    "@types/uuid": "8.3.4",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "chai": "^4.2.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.29.0",
    "eslint-config-next": "12.0.8",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "ethereum-waffle": "^3.0.0",
    "ethers": "5.5.3",
    "hardhat": "^2.8.3",
    "hardhat-gas-reporter": "^1.0.4",
    "husky": "7.0.4",
    "lint-staged": "12.1.7",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.16",
    "ts-node": "^10.1.0",
    "typechain": "^5.1.2",
    "typescript": "^4.5.2"
  }
}
